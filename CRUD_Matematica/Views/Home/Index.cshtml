@model CRUD_Matematica.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Login";
}


<div class="row" style="margin-top:20px">
    <form method="post" action="@Url.Action("Index","Home")" >
        <div class="form-group">
            <label>Usuario</label>
            @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Contraseña</label>
            @Html.PasswordFor(x => x.Contrasenia, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-success">Ingresar</button>
    </form>
</div>